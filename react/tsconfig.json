{
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "target": "ES5",
    "module": "ESNext",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "Node",
    "isolatedModules": false,
    "sourceMap": true,
    "esModuleInterop": true,
    "jsxImportSource": "react",
    "baseUrl": ".",
    "incremental": true,
    "noFallthroughCasesInSwitch": true,
    "jsx": "react-jsx",
    "paths": {
      "@app/*": ["./src/app/*"],
      "@components/*": ["./src/components/*"],
      "@domain/*": ["./src/domain/*"],
      "@services/*": ["./src/services/*"],
      "@public/*": ["./src/public/*"],
      "@hooks/*": ["./src/hooks/*"],
      "@test/*": ["./test/*"]
    }
  },
  "include": ["src/**/*", "*.ts", "test/**/*"],
  "exclude": ["node_modules", "build"]
}
